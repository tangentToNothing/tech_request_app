<div class="container-fluid">
<div class="row">
	<div class="col-lg-10">
		<div class="card card-block card-info">
		<div class="card-title"><h3>View Submissions</h3></div>
		<div class="card-body">
		<table class="table table-sm">
			<thead>
				<tr>
					<% Event.column_names.each do |c| %>
						<% if !((c == "id") || (c == "updated_at")) %>
							<th><%= c.humanize %></th>
						<% end %>
					<% end %>
				</tr>
			</thead>
			<tbody>
				<% @events.each do |e| %>
					<tr>
						<% Event.column_names.each do |c| %>
							<% if !((c == "id") || (c == "updated_at")) %>
								<td><%= eval "e.#{c.to_s}" %></td>
							<% end %>
						<% end %>	
					</tr>
				<% end %>
			</tbody>
		</table>
		</div>
		</div>
	</div>
</div>
</div>